<UserControl x:Class="Voilier_IA.LabeledPoint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Voilier_IA"
             mc:Ignorable="d">
    <StackPanel>
        <Ellipse HorizontalAlignment="Center" Stroke="#FF595959" Width="10" Height="10" VerticalAlignment="Top" Fill="Black" />
        <Label x:Name="label" Content="{Binding LabelText, Mode = TwoWay}" HorizontalAlignment="Center"  VerticalAlignment="Bottom"/>

    </StackPanel>
</UserControl>
